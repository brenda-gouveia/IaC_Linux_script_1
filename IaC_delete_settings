#!/bin/bash

# Removendo os usu치rios, e indiretamente excluindo as suas pastas
# Filtra pelo UID (User ID), para usu치rios comuns costumam ser a partir de 1000

for user in $(awk -F: '$3 >= 1001 {print $1}' /etc/passwd); do
    echo "Removendo usu치rio: $user"
    userdel -r -f "$user"
done


# Removendo os grupos de usu치rios
#
for group in $(awk -F: '$3 >= 1000 {print $1}' /etc/group); do
    echo "Removendo grupo: $group"
    groupdel "$group"
done
